@page
@model RecruitCatBatraha.Pages.Jobtitles.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Job Title</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Jobtitle.title" class="control-label"></label>
                <input asp-for="Jobtitle.title" class="form-control" />
                <span asp-validation-for="Jobtitle.title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jobtitle.minimumSalary" class="control-label"></label>
                <input asp-for="Jobtitle.minimumSalary" class="form-control" />
                <span asp-validation-for="Jobtitle.minimumSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jobtitle.maximumSalary" class="control-label"></label>
                <input asp-for="Jobtitle.maximumSalary" class="form-control" />
                <span asp-validation-for="Jobtitle.maximumSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jobtitle.jobOpenings" class="control-label"></label>
                <input asp-for="Jobtitle.jobOpenings" class="form-control" />
                <span asp-validation-for="Jobtitle.jobOpenings" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jobtitle.requiredSkills" class="control-label"></label>
                <textarea asp-for="Jobtitle.requiredSkills" class="form-control" ></textarea>
                <span asp-validation-for="Jobtitle.requiredSkills" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
