@page
@model RecruitCatBatraha.Pages.Candidates.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Candidate</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Candidate.CandidateId" />
            <div class="form-group">
                <label asp-for="Candidate.firstName" class="control-label"></label>
                <input asp-for="Candidate.firstName" class="form-control" />
                <span asp-validation-for="Candidate.firstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.lastName" class="control-label"></label>
                <input asp-for="Candidate.lastName" class="form-control" />
                <span asp-validation-for="Candidate.lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.targetSalary" class="control-label"></label>
                <input asp-for="Candidate.targetSalary" class="form-control" />
                <span asp-validation-for="Candidate.targetSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.startDate" class="control-label"></label>
                <input asp-for="Candidate.startDate" class="form-control" />
                <span asp-validation-for="Candidate.startDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.experience" class="control-label"></label>
                <input asp-for="Candidate.experience" class="form-control" />
                <span asp-validation-for="Candidate.experience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.skills" class="control-label"></label>
                <input asp-for="Candidate.skills" class="form-control" />
                <span asp-validation-for="Candidate.skills" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.CompanyId" class="control-label"></label>
                <select asp-for="Candidate.CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                <span asp-validation-for="Candidate.CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.JobtitleId" class="control-label"></label>
                <select asp-for="Candidate.JobtitleId" class="form-control" asp-items="ViewBag.JobtitleId"></select>
                <span asp-validation-for="Candidate.JobtitleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.IndustryID" class="control-label"></label>
                <select asp-for="Candidate.IndustryID" class="form-control" asp-items="ViewBag.IndustryID"></select>
                <span asp-validation-for="Candidate.IndustryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
